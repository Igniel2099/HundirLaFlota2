<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>

<StackPane
        fx:id="fatherPane"
        prefHeight="750.0"
        prefWidth="1200.0"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.hundirlaflota2.Controllers.VictoryController">
    <children>

        <ImageView
                fx:id="backgroundImageView"
                pickOnBounds="true">
            <image>
                <Image url="@../Images/BackgroundMain.png" />
            </image>
        </ImageView>
        <StackPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <VBox alignment="CENTER" spacing="20">
                    <ImageView fx:id="imageWinner" fitHeight="344.0" fitWidth="405.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../Images/premio.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="labelWinner" text="Eres un ganador Walther" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="36.0" />
                        </font>
                    </Label>
                </VBox>
            </children>
        </StackPane>
    </children>
</StackPane>

